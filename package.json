{
  "name": "growi-docs",
  "version": "1.0.0",
  "description": "GROWI documentation repository",
  "keywords": [
    "node",
    "vuepress",
    "markdown",
    "growi",
    "documentation"
  ],
  "author": "Yuki Takei <yuki@weseek.co.jp>",
  "license": "MIT",
  "homepage": "https://github.com/weseek/growi-docs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weseek/growi-docs.git"
  },
  "bugs": {
    "url": "https://github.com/weseek/growi-docs/issues"
  },
  "watch": {
    "apiv3:dev": {
      "patterns": [
        "../growi/apps/app/config/swagger-definition.js",
        "../growi/apps/app/src/server/routes/apiv3"
      ]
    }
  },
  "scripts": {
    "apiv3:jsdoc:base": "swagger-jsdoc -o tmp/swagger.json",
    "apiv3:jsdoc:dev": "npm run apiv3:jsdoc:base -- -d ../growi/apps/app/config/swagger-definition.js \"../growi/apps/app/src/server/**/*.js\"",
    "apiv3:jsdoc:build": "npm run apiv3:jsdoc:base -- -d tmp/growi/apps/app/config/swagger-definition.js \"tmp/growi/apps/app/src/server/**/*.js\"",
    "apiv3:redoc": "redoc-cli bundle -o docs/.vuepress/public/redoc.html tmp/swagger.json",
    "apiv3:dev": "run-s apiv3:jsdoc:dev apiv3:redoc",
    "apiv3:build": "run-s apiv3:jsdoc:build apiv3:redoc",
    "docs-growi-org:dev": "npx -y shx cp ./docs/.vuepress/config-docs-growi-org.js ./docs/.vuepress/config.js && npx -y shx rm -rf ./docs/.vuepress/theme && vuepress dev docs",
    "docs-growi-org:build": "npx -y shx cp ./docs/.vuepress/config-docs-growi-org.js ./docs/.vuepress/config.js && npx -y shx rm -rf ./docs/.vuepress/theme && vuepress build docs",
    "help-growi-cloud:dev": "npx -y shx cp ./docs/.vuepress/config-help-growi-cloud.js ./docs/.vuepress/config.js && npx -y shx mkdir -p ./docs/.vuepress/theme  && npx -y shx cp -r ./docs/.vuepress/help-growi-cloud-theme/* ./docs/.vuepress/theme && vuepress dev docs",
    "help-growi-cloud:build": "npx -y shx cp ./docs/.vuepress/config-help-growi-cloud.js ./docs/.vuepress/config.js && npx -y shx mkdir -p ./docs/.vuepress/theme  && npx -y shx cp -r ./docs/.vuepress/help-growi-cloud-theme/* ./docs/.vuepress/theme && vuepress build docs",
    "lint": "textlint \"docs/ja/**/*.md\" \"docs/en/**/*.md\" README.md",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "@vuepress/plugin-google-analytics": "^1.8.2",
    "babel-eslint": "^10.0.1",
    "bootstrap": "^5.2.3",
    "eslint": "^5.15.1",
    "eslint-config-weseek": "^1.0.1",
    "eslint-plugin-import": "^2.16.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-task-lists": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "prettier": "^2.0.5",
    "redoc-cli": "^0.8.6",
    "sass": "^1.62.1",
    "sass-loader": "^v10.3.1",
    "stylelint": "^13.6.0",
    "stylelint-config-recess-order": "^2.0.4",
    "swagger-jsdoc": "^3.4.0",
    "textlint": "^12.0.2",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-weseek": "^1.0.3",
    "vue-tabs-component": "^1.5.0",
    "vuepress": "^1.8.2",
    "vuepress-jsdoc": "^3.0.0",
    "vuepress-plugin-tabs": "^0.3.0"
  },
  "engines": {
    "node": "^14 || ^16",
    "npm": ">=6.14 <7 || >=8.1 < 9",
    "yarn": ">=1.22 <2"
  },
  "dependencies": {
    "vuepress-plugin-medium-zoom": "^1.1.9",
    "vuepress-plugin-redirect": "^1.2.5",
    "vuepress-plugin-sitemap": "^2.3.1"
  }
}
